          "type": "object",
          "patternProperties": {
            ".*": {
              "headerTemplate": "{{i}}",
              "options": {
                "keep_oneof_values": false
              },
              "oneOf": [
                {
                  "title": "Exactly",
                  "$ref": "score.json"
                },
                {
                  "title": "Random",
                  "type": "object",
                  "properties": {
                    "min": {
                      "title": "Minimum",
                      "$ref": "score.json"
                    },
                    "max": {
                      "title": "Maximum",
                      "$ref": "score.json"
                    }
                  }
                },
                {
                  "title": "Copy from",
                  "type": "string"
                }
              ]
            }
          }
        }
      }
    },
